{
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "tailwindCSS.classAttributes": ["className", "classNames"],
  "tailwindCSS.classFunctions": ["swTwVariants"],
  "tailwindCSS.experimental.configFile": {
    "packages/ui/src/styles/switchwon-styles.css": "packages/ui/src/**",
    "apps/docs/src/styles/app.css": "apps/docs/src/**"
  },
  "editor.codeActionsOnSave": {
    // 저장할 때 ESLint 규칙에 걸리는 것들을 자동으로 고침
    "source.fixAll.eslint": "explicit"
  },
  "editor.formatOnSave": true
}
